{% extends 'base.html.twig' %}

{% block title %}
    {{ book.title }}
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <!-- Détails du livre -->
        <div class="col-md-12">
            <div class="card mb-4 p-3 shadow-sm" style="background-color: #E9D7FF;">
                <div class="row no-gutters">
                    <div class="col-md-3">
                        <img src="{{ asset('/assets/images/books/' ~ book.coverImage) }}" class="img-fluid rounded" alt="{{ book.title }}">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h5 class="card-title fs-2">{{ book.title }}</h5>
                            <p class="text-muted">{{ book.author.firstname }} {{ book.author.lastname }}</p>
                            <div class="mb-3">
                                <span class="badge rounded-pill bg-light text-dark"><i class="fa-solid fa-hat-wizard"></i> Magical</span>
                                <span class="badge rounded-pill bg-light text-dark"><i class="fa-solid fa-heart"></i> Romance</span>
                            </div>
                            <p>{{ book.summary }}</p>
                            <button data-book-id="{{ book.id }}" class="btn btn-outline-dark like-button">
                                <i class="fa-solid fa-heart"></i> {{ book.getLikedByUsers().contains(app.user) ? 'Unlike' : 'Like' }}
                            </button>
                            <p class="mt-2">
                                <i class="fa-solid fa-heart"></i>
                                <span id="likes-count">{{ book.getLikedByUsers()|length }}</span> likes
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            

            {# <!-- Suggestions dans la même catégorie -->
             <h4 class="mt-4">In the same category...</h4>
            <div class="card mb-4 p-3 shadow-sm" style="background-color: #E9D7FF;">
                <div class="row no-gutters">
                    <div class="col-md-3">
                        <img src="{{ asset('/assets/images/books/' ~ relatedBook.coverImage) }}" class="img-fluid rounded" alt="{{ relatedBook.title }}">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <h5 class="card-title fs-5">{{ relatedBook.title }}</h5>
                            <p class="text-muted">{{ relatedBook.author.firstname }} {{ relatedBook.author.lastname }}</p>
                            <div class="mb-3">
                                <span class="badge rounded-pill bg-light text-dark"><i class="fa-solid fa-tree"></i> Adventure</span>
                                <span class="badge rounded-pill bg-light text-dark"><i class="fa-solid fa-dragon"></i> Fantasy</span>
                            </div>
                            <p>{{ relatedBook.description }}</p>
                            <button data-book-id="{{ relatedBook.id }}" class="btn btn-outline-dark like-button">
                                <i class="fa-solid fa-heart"></i> {{ relatedBook.getLikedByUsers()|length }} likes
                            </button>
                        </div>
                    </div>
                </div>
            </div>  #}
        </div>
    </div>
</div>

<script>
    document.querySelectorAll('.like-button').forEach(button => {
        button.addEventListener('click', function () {
            const bookId = this.getAttribute('data-book-id');
            fetch(`/book/${bookId}/like`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Request error');
                }
                return response.json();
            })
            .then(data => {
                this.textContent = this.textContent === 'Like' ? 'Unlike' : 'Like';
                document.getElementById('likes-count').textContent = `${data.likes}`;
            })
            .catch(error => console.error('Error:', error));
        });
    });

</script>

{% endblock %}
