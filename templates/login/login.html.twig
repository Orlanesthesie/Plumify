<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Plumify</title>
    <link rel="icon" href="{{ asset('images/logos/icon.png') }}">

    {% block stylesheets %}
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
    {% endblock %}
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="login-card card p-4 shadow-lg">
            <div class="text-center">
            <a href="/">
                <img src="{{ asset('images/logos/logo1.png') }}" alt="Plumify Logo" class="logo mb-5" width="80">
            </a>
            </div>

            <div class="d-flex align-items-center justify-content-center mb-4">
                <a onclick="window.history.back()" class="mr-2 chevron">
                    <i class="fa-solid fa-chevron-left"></i>
                </a>
                <h2 class="mb-0">Welcome Back !</h2>
            </div>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="form-group">
                    <label for="username">Email:</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required>
                </div>

                <div class="form-group position-relative">
                    <label for="password">Password:</label>
                    <input type="password" class="form-control" id="password" name="_password" required>
                    <i class="fa-solid fa-eye position-absolute" style="right: 10px; top: 43px; cursor: pointer;"></i>
                </div>

                <div class="forgot-password mb-3">
                    <a href="{{ path('app_forgot_password_request') }}">Forgot password ?</a>
                </div>

                <button type="submit" class="btn btn-login btn-block"><strong>Login</strong></button>
            </form>

            <div class="register-link text-center mt-3">
                <p>New member? <a href="{{ path('app_registration') }}">Register here</a></p>
            </div>
        </div>
    </div>
</body>
</html>
