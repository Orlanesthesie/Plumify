{% extends 'base.html.twig' %}

{% block title %}Books in {{ category.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
	<div class="d-flex">
        <a href="javascript:history.back()" class="show p-3" title="back" style="text-decoration: none;"><i class="fa-solid fa-arrow-left"></i></a>
        <h1 class="quando mt-3">{{category.icon}} {{ category.name }}</h1>
    </div>
    <div class="row mt-5">
        {% for book in books %}
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <div class="book-cover-container">
                        <a href="{{ path('book_show', { 'id': book.id }) }}" title="{{ book.title }}">
                            <img src="{{ asset('/assets/images/books/' ~ book.coverImage) }}" class="card-img-top img-fixed book-cover" alt="{{ book.title }}">
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title quando">{{ book.title }}</h5>
                        <p class="text-muted">{{ book.author }}</p>
                        <p class="card-text">{{ book.publicationYear }}</p>
                        <p class="card-text">{{ book.description }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No books found in this category.</p>
        {% endfor %}
    </div>
</div>    

{% endblock %}
