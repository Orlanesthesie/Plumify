<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Category List{% endblock %}
    </title>
    <link rel="icon" href="{{ asset('images/logos/icon.png') }}">
    {% block stylesheets %}
    <!-- Import Google Icon Font -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- Import Custom Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Quando&display=swap" rel="stylesheet">
    <!-- Import Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles -->
    <link type="text/css" rel="stylesheet" href="{{ asset('styles/app.css') }}" media="screen,projection"/>
    <link type="text/css" rel="stylesheet" href="{{ asset('styles/modale.css') }}" media="screen,projection"/>
    <!-- Import Font Awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
{% endblock %}
</head>
<body>


{% block body %}
<div class=" logo-container">
    <a href="/">
        <img src="{{ asset('images/logos/logo2.png') }}" class="text-center" alt="logo" style="height: 8vh; ">
    </a>        
        <hr>
</div>

<div class="container mt-4">
    <h2 class="mb-4 quando">Book Categories</h2>
    <div class="row">
        {% for category in categories %}
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-outiline-custom">{{ category.name }}</a>
                        </h5>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning">
                    No categories found.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
        <!-- Navbar pour mobile -->
    <nav class="navbar fixed-bottom navbar-dark bg-dark d-md-none">
        <div class="container-fluid justify-content-around">
            <a href="{{ path('app_home') }}" class="nav-link"><i class="fa-solid fa-house" style="color: #B197FC;"></i></a>
            <a href="{{ path('book_search') }}" class="nav-link text-light"><i class="fa-solid fa-magnifying-glass" style="color: #B197FC;"></i></a>
            <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" class="nav-link text-light"><i class="fa-solid fa-user" style="color: #B197FC;"></i></a>
            <a href="{{ path('app_logout') }}" class="nav-link text-light"><i class="fa-solid fa-right-from-bracket" style="color: #B197FC;"></i></a>
            <a href="{{ path('category_list') }}" class="nav-link text-light"><i class="fa-solid fa-list" style="color: #B197FC;"></i></a>
        </div>
    </nav>
{% endblock %}

